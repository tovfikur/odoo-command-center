<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Terminal Log Tree View -->
        <record id="view_terminal_log_tree" model="ir.ui.view">
            <field name="name">developer.terminal.log.tree</field>
            <field name="model">developer.terminal.log</field>
            <field name="arch" type="xml">
                <tree string="Command History" create="false" edit="false">
                    <field name="create_date" string="Executed At"/>
                    <field name="user_id" string="User"/>
                    <field name="command_type"/>
                    <field name="command"/>
                    <field name="state" decoration-success="state == 'success'" decoration-danger="state == 'failed'"/>
                    <field name="return_code"/>
                    <field name="execution_time" string="Time (s)"/>
                </tree>
            </field>
        </record>

        <!-- Terminal Log Form View -->
        <record id="view_terminal_log_form" model="ir.ui.view">
            <field name="name">developer.terminal.log.form</field>
            <field name="model">developer.terminal.log</field>
            <field name="arch" type="xml">
                <form string="Command Details" create="false" edit="false">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="command_type" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="user_id" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="return_code" readonly="1"/>
                                <field name="execution_time" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Command">
                                <field name="command" widget="text" readonly="1"
                                       style="font-family: monospace; background-color: #1e1e1e; color: #00ff00; padding: 10px; min-height: 150px;"/>
                            </page>
                            <page string="Output">
                                <field name="output" widget="text" readonly="1"
                                       style="font-family: monospace; background-color: #1e1e1e; color: #00ff00; padding: 10px; min-height: 300px;"/>
                            </page>
                            <page string="Error Output" invisible="not error_output">
                                <field name="error_output" widget="text" readonly="1"
                                       style="font-family: monospace; background-color: #1e1e1e; color: #ff0000; padding: 10px; min-height: 300px;"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Terminal Log Search View -->
        <record id="view_terminal_log_search" model="ir.ui.view">
            <field name="name">developer.terminal.log.search</field>
            <field name="model">developer.terminal.log</field>
            <field name="arch" type="xml">
                <search string="Search Commands">
                    <field name="command"/>
                    <field name="user_id"/>
                    <filter string="My Commands" name="my_commands" domain="[('user_id', '=', uid)]"/>
                    <filter string="Shell Commands" name="shell" domain="[('command_type', '=', 'shell')]"/>
                    <filter string="Python Code" name="python" domain="[('command_type', '=', 'python')]"/>
                    <filter string="Package Manager" name="package" domain="[('command_type', '=', 'package')]"/>
                    <separator/>
                    <filter string="Success" name="success" domain="[('state', '=', 'success')]"/>
                    <filter string="Failed" name="failed" domain="[('state', '=', 'failed')]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('create_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="Last 7 Days" name="last_week" domain="[('create_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Command Type" name="group_type" context="{'group_by': 'command_type'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action: Terminal Interface -->
        <record id="action_developer_terminal" model="ir.actions.client">
            <field name="name">Terminal</field>
            <field name="tag">developer_terminal_widget</field>
            <field name="target">current</field>
        </record>

        <!-- Action: Command History -->
        <record id="action_terminal_logs" model="ir.actions.act_window">
            <field name="name">Command History</field>
            <field name="res_model">developer.terminal.log</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_my_commands': 1, 'search_default_today': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No commands executed yet
                </p>
                <p>
                    Execute commands from the Terminal to see them here.
                </p>
            </field>
        </record>

        <!-- Action: Environment Info -->
        <record id="action_environment_info" model="ir.actions.client">
            <field name="name">Environment Info</field>
            <field name="tag">developer_terminal_env_info</field>
            <field name="target">current</field>
        </record>

    </data>
</odoo>
