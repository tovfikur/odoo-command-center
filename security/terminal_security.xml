<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Security Group: Only System Administrators -->
        <record id="group_developer_terminal_admin" model="res.groups">
            <field name="name">Developer Terminal Access</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_system'))]"/>
            <field name="comment">Users in this group can access the Developer Terminal. This is automatically granted to System Administrators.</field>
        </record>

        <!-- Record Rules: Users can only see their own logs -->
        <record id="terminal_log_user_rule" model="ir.rule">
            <field name="name">User can only see own terminal logs</field>
            <field name="model_id" ref="model_developer_terminal_log"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_developer_terminal_admin'))]"/>
        </record>

        <!-- System Admin can see all logs -->
        <record id="terminal_log_admin_rule" model="ir.rule">
            <field name="name">System Admin can see all terminal logs</field>
            <field name="model_id" ref="model_developer_terminal_log"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

    </data>
</odoo>
